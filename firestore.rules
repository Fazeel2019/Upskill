rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to read other profiles
      allow get: if request.auth != null;
    }
    
    // Posts can be created by any authenticated user
    // Posts can be read by any authenticated user
    // Posts can only be updated/deleted by their author
    match /posts/{postId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && request.resource.data.author.uid == request.auth.uid;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
